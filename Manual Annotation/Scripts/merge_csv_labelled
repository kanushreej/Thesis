import pandas as pd

# Load the CSV files
brexit_df = pd.read_csv('/Users/kanushreejaiswal/Desktop/Thesis/Manual Annotation/UK/Raphael/TaxationUK_labelled.csv')
climate_change_df = pd.read_csv('/Users/kanushreejaiswal/Desktop/Thesis/Manual Annotation/UK/Kanushree/TaxationUK_labelled.csv')

# Combine the dataframes
combined_df = pd.concat([brexit_df, climate_change_df])

# Save the combined dataframe to a new CSV file
combined_csv_path = '/Users/kanushreejaiswal/Desktop/Thesis/Manual Annotation/UK/Final Labelled Data/TaxationUK_labelled.csv'
combined_df.to_csv(combined_csv_path, index=False)

print(f"Combined CSV saved to {combined_csv_path}")
